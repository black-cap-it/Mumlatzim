<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="300dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gallery_imageView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:background="@color/imgPlaceholder"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/image_notFound_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/image_notFound"
        android:textSize="16sp"
        android:fontFamily="@font/libre_franklin"
        style="@style/KeysAppearance"
        android:visibility="gone"
        android:paddingStart="@dimen/margin_8dp"
        android:paddingEnd="@dimen/margin_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_imageView"
        app:layout_constraintEnd_toEndOf="@+id/gallery_imageView"
        app:layout_constraintStart_toStartOf="@+id/gallery_imageView"
        app:layout_constraintTop_toTopOf="@+id/gallery_imageView" />
</android.support.constraint.ConstraintLayout>